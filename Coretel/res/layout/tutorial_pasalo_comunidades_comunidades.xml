<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_layout_comunidades"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_pasalo_shape_initial"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tutorial_mensaje_comunidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/mensajeAyuda"
            android:textAppearance="?android:attr/textAppearanceMedium" />

       <Button
           android:id="@+id/tutorial_button_regresar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tutorial_mensaje_comunidades"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="32dp"
           android:background="@drawable/atras"
           android:gravity="center" 
         
         />
       
       <Button
       		android:id="@+id/tutorial_button_salir_comunidades"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_below="@+id/tutorial_mensaje_comunidades"
       		android:layout_centerHorizontal="true"
       		android:layout_marginTop="65dp"
       		android:background="@drawable/cancelar"
       		android:gravity="center"    
       />
    </RelativeLayout>

</LinearLayout>