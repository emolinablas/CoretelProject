<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Layout.header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_footer_iphone"
        android:orientation="horizontal"
        android:padding="0dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/button_background_iphone_gray"
                android:text="Logout"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView1"
                style="@style/Text.Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="86dp"
                android:layout_toLeftOf="@+id/button1"
                android:text="Lobby"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/Layout.body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="#D1D5E0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/patron_de_fondo_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_label" />

            <ListView
                android:id="@+id/lobby_opciones_listview"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_list_view" >

            </ListView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/Layout.footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:background="@drawable/background_footer_iphone" >

    </LinearLayout>

</LinearLayout>