<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/Layout.header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_footer_iphone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/Text.Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Perfil" />
                
                <LinearLayout 
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right">
                    
                    <Button
                        android:id="@+id/perfil_editar_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_iphone_gray"
                        android:text="Editar"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D1D5E0"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    style="@style/Layout.body"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/patron_de_fondo_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/Text.Label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Datos Actuales"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_clear"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/Text.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Nombre" />

                        <TextView
                            android:id="@+id/perfil_nombre_textview"
                            style="@style/Text.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:id="@+id/email"
                            style="@style/Text.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Email"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/perfil_email_textview"
                            style="@style/Text.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/Text.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Usuario" />

                        <TextView
                            android:id="@+id/perfil_usuario_textview"
                            style="@style/Text.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/Text.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Telefono" />

                        <TextView
                            android:id="@+id/perfil_telefono_textview"
                            style="@style/Text.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permitir ubicarme"
                        android:textColor="@color/text_label" />

                    <ToggleButton
                        android:id="@+id/compartir_ubicacion_toggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ToggleButton"
                        android:textOff="@android:string/no"
                        android:textOn="@android:string/ok" />

                    <Button
                        android:id="@+id/perfil_cambiar_button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_background_clear"
                        android:text="Cambiar Clave"
                        android:textColor="@color/text_label"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:id="@+id/perfil_layout_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/perfil_claveactual_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:hint="Clave Actual"
                            android:inputType="textPassword" >

                            <requestFocus />
                        </EditText>

                        <EditText
                            android:id="@+id/perfil_clavenueva1_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:hint="Clave Nueva"
                            android:inputType="textPassword" />

                        <EditText
                            android:id="@+id/perfil_clavenueva2_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:hint="Verificar Clave"
                            android:inputType="textPassword" />

                        <Button
                            android:id="@+id/perfil_guardar_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_background_clear"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="Guardar" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/background_footer_iphone"
                android:gravity="right|center"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>