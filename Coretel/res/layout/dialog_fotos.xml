<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Fotografia"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id ="@+id/dialog_fotos_cerrar"
        android:layout_width ="250dp"
        android:layout_height ="wrap_content"
        android:layout_gravity ="center_horizontal"
        android:layout_marginTop ="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background ="@drawable/boton_background_rojo"
        android:text ="Cerrar" >
    </Button >
   
    <Button
        android:id ="@+id/dialog_fotos_album"
        android:layout_width ="250dp"
        android:layout_height ="wrap_content"
        android:layout_gravity ="center_horizontal"
        android:layout_marginTop ="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background ="@drawable/button_background_gris"
        android:text ="Albums de Fotos" >
    </Button >
   
    <Button
        android:id ="@+id/dialog_fotos_tomar"
        android:layout_width ="250dp"
        android:layout_height ="wrap_content"
        android:layout_gravity ="center_horizontal"
        android:layout_marginTop ="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background ="@drawable/button_background_gris"
        android:text ="Tomar Foto" >
    </Button >
    

</LinearLayout>