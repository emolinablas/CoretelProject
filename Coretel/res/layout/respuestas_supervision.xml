<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/respuestas_corregido"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:background="@drawable/boton_background_verde"
        android:text="Corregido" >
    </Button>
    
    <Button
        android:id="@+id/respuestas_irreparable"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:background="@drawable/boton_background_rojo"
        android:text="Irreparable" >
    </Button>
    
    <Button
        android:id="@+id/respuestas_corregido_re"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:background="@drawable/boton_background_naranja"
        android:text="Corregido Reasignado" >
    </Button>
    
    <Button
        android:id="@+id/respuestas_irreparable_re"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton_background_naranja"
        android:text="Irreparable Reasignado" >
    </Button>
    
    <Button
        android:id="@+id/respuestas_cerrar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Cerrar" >
    </Button>

</LinearLayout>